<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/logo"
        tools:ignore="Suspicious0dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        tools:ignore="Suspicious0dp">

    </SeekBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        tools:ignore="Suspicious0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="forward"
            android:layout_weight="1"
            android:background="@drawable/back"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:onClick="stop"
            android:background="@drawable/button"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:onClick="play"
            android:background="@drawable/signs"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:onClick="pause"
            android:background="@drawable/pause"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:onClick="next"
            android:background="@drawable/arrows"></ImageView>
    </LinearLayout>
</LinearLayout>